@{
    ViewData["Title"] = "Kontrol Paneli";
}

<style>
    .background-panel {
        min-height: calc(100vh - 56px);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        padding-top: 40px;
    }

    .panel-title {
        font-weight: bold;
        margin-bottom: 40px; /* Başlıktan kartlara mesafe */
        font-size: 2rem;
    }

    .panel-row {
        display: flex;
        gap: 50px;
        flex-wrap: wrap;
        justify-content: center;
    }

    .panel-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 12px;
        padding: 40px 30px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        width: 360px; /* Daha büyük kart */
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .panel-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
        }

        .panel-card .card-title {
            font-weight: 600;
            margin-bottom: 25px;
            font-size: 1.3rem;
        }

    .btn-custom {
        font-size: 1.1rem;
        padding: 12px;
        margin-bottom: 12px;
    }
</style>

<div class="container mt-5">
    <!-- Başlık -->
    <div class="text-center bg-light py-4 rounded shadow mb-4">
        <h2 class="m-0 fw-bold fs-3 text-black">
            Yönetim Paneli
        </h2>
        <p class="text-muted mt-2 mb-0">.</p>
    </div>
 </div>
<div class="background-panel">

    <div class="panel-row">
        <div class="panel-card text-center">
            <div class="card-title">Müşteri Bilgisi-Analiz</div>
            <a href="@Url.Action("Create", "Customer")" class="btn btn-primary btn-custom w-100">➕ Müşteri Ekle</a>
            <a href="@Url.Action("Index", "Customer")" class="btn btn-secondary btn-custom w-100">👥 Müşterileri Görüntüle</a>
            <a href="@Url.Action("MonthlySales", "Report")" class="btn btn-primary btn-custom w-100">📊 Raporlama</a>

        </div>

        <div class="panel-card text-center">
            <div class="card-title">Sipariş-Ürün Bilgisi</div>
            <a href="@Url.Action("Index", "Order")" class="btn btn-primary btn-custom w-100">🛒 Siparişleri Görüntüle</a>
            <a href="@Url.Action("Create", "Product")" class="btn btn-primary btn-custom w-100">📦 Ürün Ekle</a>
            <a href="@Url.Action("Index", "Product")" class="btn btn-primary btn-custom w-100">📋 Ürünleri Görüntüle</a>
        </div>
    </div>
</div>
